<Window x:Class="PL.SetStartDateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Height="317" Width="286"
        WindowStyle="None"
        DataContext =  "{Binding RelativeSource = {RelativeSource Mode=self}}">
    
    <Grid Margin="0,0,10,7">
        <Button Style="{StaticResource CloseButton}" Click="CloseButton_Click" Margin="0,6,0,0"/>
        <Calendar SelectedDate="{Binding StartDate, Mode=TwoWay}" VerticalAlignment="Center" DisplayDateStart="{Binding CurrentDate}" Height="178" Width="200" DisplayMode="Month" >
        </Calendar>
        <Label Content="Pick a start date for the project:" HorizontalAlignment="Left" Margin="53,10,0,0" VerticalAlignment="Top" Width="185"/>
        <Button Content="set" HorizontalAlignment="Center" Margin="0,219,0,0" VerticalAlignment="Top" Width="92" Click="setDate_Click"/>
    </Grid>

</Window>
